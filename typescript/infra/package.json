    "@hyperlane-xyz/utils": "5.6.0",
    "@inquirer/prompts": "^5.3.8",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@safe-global/api-kit": "1.3.0",
    "@safe-global/protocol-kit": "1.3.0",
    "@safe-global/safe-core-sdk-types": "2.3.0",
    "@solana/web3.js": "^1.78.0",
